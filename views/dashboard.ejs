<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Shipping Owl Dashboard</title>
  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
      background: #f6f6f7;
      padding: 2rem;
    }

    button {
      background: #5c6ac4;
      color: white;
      border: none;
      border-radius: 4px;
      margin: 0.5rem 0.5rem 0 0;
      padding: 0.5rem 1rem;
      font-size: 1rem;
      cursor: pointer;
      transition: background-color 0.2s ease;
    }

    button:disabled {
      background: #a0a5d6;
      cursor: not-allowed;
    }

    button:hover:not(:disabled) {
      background-color: #4b56a3;
    }

    #output {
      margin-top: 1.5rem;
      white-space: pre-wrap;
      border: 1px solid #ccc;
      padding: 1rem;
      background: white;
      min-height: 100px;
      font-family: monospace;
    }
  </style>

  <!-- Shopify App Bridge -->
  <script src="https://unpkg.com/@shopify/app-bridge@3"></script>
  <script src="https://unpkg.com/@shopify/app-bridge-utils@3"></script>
</head>

<body>
  <h1>ðŸš€ Shipping Owl Dashboard</h1>
  <p>Local products in DB: <strong><%= productCount %></strong></p>

  <button id="seed">Seed Dummy Products</button>
  <button id="sync">Sync Products to Shopify</button>
  <button id="fetch">Fetch Orders from Shopify</button>

  <div id="output"></div>

  <!-- App Bridge Initialization -->
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      console.log('[AppBridge] DOM loaded');

      const AppBridge = window['app-bridge'];
      const createApp = AppBridge.default;
      const hostParam = new URLSearchParams(location.search).get("host");
      console.log('[AppBridge] Host param:', hostParam);

      const app = createApp({
        apiKey: "<%= SHOPIFY_API_KEY %>",
        host: hostParam,
        forceRedirect: true
      });

      console.log('[AppBridge] App created:', app);

      // Make appBridge globally available
      window.appBridge = {
        app,
        utils: AppBridge.utils
      };
    });
  </script>

  <!-- Button Event Handlers -->
  <script>
    const output = document.getElementById('output');
    const buttons = {
      seed: document.getElementById('seed'),
      sync: document.getElementById('sync'),
      fetch: document.getElementById('fetch')
    };

    async function callApi(path, btn) {
      console.log(`[API] Button clicked: ${path}`);

      try {
        btn.disabled = true;
        output.textContent = 'Loading...';

        console.log('[API] Getting session token...');
        const sessionToken = await window.appBridge.utils.getSessionToken(window.appBridge.app);
        console.log('[API] Session token:', sessionToken);

        const res = await fetch(path, {
          method: 'GET',
          headers: {
            Authorization: `Bearer ${sessionToken}`
          }
        });

        console.log('[API] Response status:', res.status);
        const text = await res.text();
        console.log('[API] Response text:', text);

        if (!res.ok) {
          throw new Error(`HTTP ${res.status} - ${res.statusText}\n\n${text}`);
        }

        output.textContent = text;
      } catch (err) {
        console.error('[API] Error:', err);
        output.textContent = 'Error: ' + err.message;
      } finally {
        btn.disabled = false;
        console.log('[API] Request finished');
      }
    }

    buttons.seed.addEventListener('click', () => callApi('/seed-products', buttons.seed));
    buttons.sync.addEventListener('click', () => callApi('/sync-products', buttons.sync));
    buttons.fetch.addEventListener('click', () => callApi('/fetch-orders', buttons.fetch));
  </script>
</body>

</html>
