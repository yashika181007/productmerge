<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Shipping Owl Dashboard</title>
  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
      background: #f6f6f7;
      padding: 2rem;
    }

    button {
      background: #5c6ac4;
      color: white;
      border: none;
      border-radius: 4px;
      margin: 0.5rem 0.5rem 0 0;
      padding: 0.5rem 1rem;
      font-size: 1rem;
      cursor: pointer;
      transition: background-color 0.2s ease;
    }

    button:disabled {
      background: #a0a5d6;
      cursor: not-allowed;
    }

    button:hover:not(:disabled) {
      background-color: #4b56a3;
    }

    #output {
      margin-top: 1.5rem;
      white-space: pre-wrap;
      border: 1px solid #ccc;
      padding: 1rem;
      background: white;
      min-height: 100px;
      font-family: monospace;
    }
  </style>
</head>

<body>
  <h1>ðŸš€ Shipping Owl Dashboard</h1>
  <p>Local products in DB: <strong><%= productCount %></strong></p>

  <button id="seed">Seed Dummy Products</button>
  <button id="sync">Sync Products to Shopify</button>
  <button id="fetch">Fetch Orders from Shopify</button>

  <div id="output"></div>

  <script>
    const buttons = {
      seed: document.getElementById('seed'),
      sync: document.getElementById('sync'),
      fetch: document.getElementById('fetch')
    };

    async function callApi(path, btn) {
      try {
        btn.disabled = true;
        output.textContent = 'Loading...';
        const res = await fetch(path);
        if (!res.ok) {
          throw new Error(`HTTP ${res.status} - ${res.statusText}`);
        }
        const text = await res.text();
        output.textContent = text;
      } catch (err) {
        output.textContent = 'Error: ' + err.message;
      } finally {
        btn.disabled = false;
      }
    }

    const output = document.getElementById('output');

    buttons.seed.addEventListener('click', () => callApi('/seed-products', buttons.seed));
    buttons.sync.addEventListener('click', () => callApi('/sync-products', buttons.sync));
    buttons.fetch.addEventListener('click', () => callApi('/fetch-orders', buttons.fetch));
  </script>

  <!-- Shopify App Bridge -->
  <script src="https://unpkg.com/@shopify/app-bridge@3"></script>
  <script>
    (function () {
      const AppBridge = window['app-bridge'];
      const createApp = AppBridge.default;

      const app = createApp({
        apiKey: '<%= process.env.SHOPIFY_API_KEY %>',
        host: new URLSearchParams(window.location.search).get('host'),
        forceRedirect: true
      });

      // You can add more App Bridge features here if needed
    })();
  </script>

  <script>
    console.log('HOST param:', new URLSearchParams(window.location.search).get('host'));
  </script>

</body>

</html>
